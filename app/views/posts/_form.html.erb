<div class="form">
  <%= form_for @post do |f| %>
    <%= f.label :title %>
    <br>
    <%= f.text_field :title %>
    <br>
    <%= f.label :author %>
    <br>
    <%= f.text_field :author %>
    <br>
    <%= f.label :content %>
    <br>
    <%= f.text_field :content %>
    <br>
    <br>
    <%= f.submit 'Submit', class:'btn btn-primary' %>
  <% end %>
</div>
